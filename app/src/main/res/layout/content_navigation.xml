<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_navigation"
    android:background="#37474F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vivekgandhi.abcbuilders.Navigation"
    tools:showIn="@layout/app_bar_navigation">

    <ImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:srcCompat="@drawable/javaimg"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="View Gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:onClick="viewgallery"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"/>

    <Button
        android:text="Locations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:onClick="locations"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"/>

    <Button
        android:text="testimonial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:onClick="testimonials"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"/>

    <Button
        android:text="contact us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:onClick="contactus"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"/>

    <Button
        android:text="Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:onClick="goHome"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="20sp"


        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
